<script type="text/javascript">

  document.body.childNodes[1].innerText = "Sugerencias Cambiada";
  var negrita= document.getElementsByClassName("destacado");
  negrita[0].style.fontWeight="bold";

  var ocultar = document.getElementById("resultado");
  ocultar.style.display="none";

  var sugerencia = document.getElementsByName("sugerencia");
  sugerencia.setAttribute("required","True");

  function mostrar(){
      ocultar.style.display="block";
  }


</script>

